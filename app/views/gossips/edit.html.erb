<h1>Gossips#edit</h1>

<%= form_for @gossip do |f| %>
  <div class="form-group">
    <%= f.label :title, "Titre du potin" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content, "Contenu du potin" %>
    <%= f.text_area :content, class: "form-control" %>
  </div>

  <%= f.submit "Modifier le Potin", class: "btn btn-primary" %>
<% end %>